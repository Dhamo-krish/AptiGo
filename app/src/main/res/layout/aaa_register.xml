<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/login_logo" />


        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:paddingTop="70dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_add"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="50dp"
                                    android:layout_marginTop="50dp"
                                    android:text="@string/register"
                                    android:textColor="#fff"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="10dp"
                                    android:focusableInTouchMode="true"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/regno"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:hint="@string/regno"
                                            android:inputType="textPersonName"
                                            android:textColor="#f0f7f4"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:focusableInTouchMode="true"
                                    android:orientation="horizontal"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/password"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:hint="@string/Password"
                                            android:inputType="textPassword"
                                            android:textColor="#f0f7f4"
                                            android:textColorLink="@color/colorAccent"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:focusableInTouchMode="true"
                                    android:orientation="horizontal"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/repeatpassword"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:hint="@string/repeat_password"
                                            android:inputType="textPassword"
                                            android:textColor="#f0f7f4"
                                            android:textColorLink="@color/colorAccent"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:focusableInTouchMode="true"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/fullname"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:hint="@string/fullname"
                                            android:inputType="textPersonName"
                                            android:textColor="#f0f7f4"
                                            android:textColorLink="@color/colorAccent"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:focusableInTouchMode="true"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/email"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:hint="@string/email"
                                            android:inputType="textEmailAddress"
                                            android:textColor="#f0f7f4"
                                            android:textColorLink="@color/colorAccent"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/dept"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:clickable="true"
                                            android:editable="false"
                                            android:focusableInTouchMode="false"
                                            android:hint="@string/dept"
                                            android:inputType="none"
                                            android:textColor="#f0f7f4"
                                            android:textColorLink="@color/colorAccent"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingEnd="30dp"
                                    android:paddingStart="50dp">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColorHint="#f0f7f4"
                                        android:theme="@style/TextLabel">

                                        <EditText
                                            android:id="@+id/year"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/selector_bg_edit_2"
                                            android:clickable="true"
                                            android:editable="false"
                                            android:focusableInTouchMode="false"
                                            android:hint="@string/year"
                                            android:textColor="#f0f7f4"
                                            android:textColorLink="@color/colorAccent"
                                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                            android:textSize="13sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>


                                <Button
                                    android:id="@+id/register"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/bt_shape_2"
                                    android:stateListAnimator="@drawable/state_list_animator_z"
                                    android:text="@string/next"
                                    android:textColor="@color/colorPrimaryDark"></Button>

                            </LinearLayout>
                        </ScrollView>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/plus_x"
                android:transitionName="loginFab"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
